    "mon": "DEBUG=* nodemon ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UKHomeOffice/platform_email_service.git"
  },
  "author": "Home Office Digital",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/UKHomeOffice/platform_email_service/issues"
  },
  "homepage": "https://github.com/UKHomeOffice/platform_email_service#readme",
  "dependencies": {
    "bluebird": "^3.4.6",
    "body-parser": "^1.13.1",
    "email-templates": "^2.0.0-beta.1",
    "express": "^4.12.4",
    "handlebars": "^4.0.6",
    "nodemailer": "^2.6.4",
    "nodemailer-smtp-transport": "^2.7.2"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "debug": "^2.2.0",
    "eslint": "^3.10.2",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "http": "0.0.0",
    "istanbul": "^0.4.5",
    "jscs": "^3.0.7",
    "mocha": "^3.1.2",
    "nock": "^9.0.2",
    "plato": "^1.5.0",
    "pre-commit": "^1.0.10",
    "request": "^2.58.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0"
  },
  "pre-commit": [
    "lint",
    "style",
    "test"
  ]
